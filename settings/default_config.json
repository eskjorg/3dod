{
    "network": {
        "encoder": "resnet34",
        "tiling_upsampling": 8,
        "output_stride": 4,
        "support_region": 0.2
    },
    "validation": {
        "score": "f1_score"
    },
    "detection": {
        "detection_threshold": 0.5,
        "iou_threshold": 0.3
    },
    "training": {
        "learning_rate": 0.0001,
        "n_epochs": 100,
        "neg_log_likelihood": false,
        "backup_epochs": false
    },
    "logging": {
        "avg_window_size": 25
    },
    "loading": {
        "train": {
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 16
        },
        "val": {
            "batch_size": 32,
            "shuffle": false,
            "num_workers": 32
        },
        "test": {
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 16
        }
    }
}
