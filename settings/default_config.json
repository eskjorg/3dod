{
    "network": {
        "encoder": "resnet34",
        "output_stride": 4,
        "support_region": 0.2
    },
    "evaluation": {
        "score": "ap.2d.car.easy",
        "ap": ["2d"]
    },
    "visualization": {
        "gt": ["bbox2d"],
        "det": ["bbox2d", "corners", "confidence"],
        "cnn_outputs": true,
        "cnn_outputs_gtmask": true
    },
    "postprocessing": {
        "methods": [
            "bbox2d_detection",
            "bbox3d_estimation"
        ],
        "bbox2d_detection": {
            "detection_threshold": 0.55,
            "iou_threshold": 0.3
        },
        "bbox3d_estimation": {
            "local_optimization_3d": false,
            "weights": {
                "corners": 1,
                "size": 500,
                "zdepth": 30
            }
        }
    },
    "training": {
        "n_epochs": 100,
        "learning_rate": 0.0001,
        "weighting_mode": "layer_wise",
        "backup_nth_epoch": 10,
        "mixed_precision": "O1"
    },
    "logging": {
        "avg_window_size": 25,
        "save_kitti_format": false,
        "save_nuscenes_format": false,
        "save_matlab_format": false,
        "save_pickle": false
    },
    "loading": {
        "train": {
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 4
        },
        "val": {
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 4
        },
        "test": {
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 16
        }
    }
}
