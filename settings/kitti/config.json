{
    "logging": {
        "save_kitti_format": true
    },
    "training": {
        "learning_rate": 0.001,
        "nll_loss": true
    },
    "data":{
        "dataformat": "kitti_object",
        "path": "/datasets/kitti/object/training/",
        "modalities": {
            "cam": [
                "image_2"
            ],
            "lidar": []
        },
        "img_dims": [352, 1216],
        "split_dir": "split_3dop",
        "threshold": {
            "truncation": 0.9,
            "occlusion": 3
        },
        "class_map": {
            "DontCare": 1,
            "Tram": 1,
            "Misc": 1,
            "Person_sitting": 1,
            "Car": 2,
            "Van": 2,
            "Truck": 1,
            "Pedestrian": 3,
            "Cyclist": 4
        }
    }
}
