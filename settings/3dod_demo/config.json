{
    "network": {
        "encoder": "drn_c_26",
        "output_stride": 4,
        "support_region": 0.2
    },
    "logging": {
        "save_kitti_format": true,
        "save_pickle": true
    },
    "training": {
        "weighting_mode": "sample_wise"
    },
    "postprocessing": {
        "methods": [
            "bbox2d_detection"
        ],
        "bbox2d_detection": {
            "detection_threshold": 2.0,
            "iou_threshold": 0.3
        }
    },
    "data":{
        "dataformat": "kitti_object",
        "path": "/datasets/kitti/object/training/",
        "modalities": {
            "cam": [
                "image_2"
            ],
            "lidar": []
        },
        "img_dims": [352, 1216],
        "split_dir": "split_3dop",
        "threshold": {
            "truncation": 0.9,
            "occlusion": 3
        },
        "class_map": {
            "DontCare": 1,
            "Tram": 5,
            "Misc": 1,
            "Person_sitting": 6,
            "Car": 2,
            "Van": 7,
            "Truck": 8,
            "Pedestrian": 3,
            "Cyclist": 4
        }
    }
}
